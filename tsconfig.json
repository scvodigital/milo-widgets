{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "rootDir": "./src",
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "types": [
        "core-js"
    ],
    "typeRoots": [
        "../node_modules/@types"
    ]
  },
  "include": [
      "src/**/*"
  ],
  "exclude": [
      "node_modules",
      "**/*.spec.ts"
  ]
}