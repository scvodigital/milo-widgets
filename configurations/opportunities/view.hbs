{{#any travelExpenses frequency expensesPaid supportOptions}}
<h4>
	<i class="fa fa-fw fa-life-ring"></i>
	Support
</h4>
<dl class="dl-horizontal">
	{{#if travelExpenses}}
	<dt>
		<i class="fa fa-fw fa-money"></i> Travel expenses:
	</dt>
	<dd>{{travelExpenses}}</dd>
	{{/if}} {{#if frequency}}
	<dt>
		<i class="fa fa-fw fa-clock-o"></i> Frequency:
	</dt>
	<dd>{{frequency}}</dd>
	{{/if}} {{#if expensesPaid}}
	<dt>
		<i class="fa fa-fw fa-gbp"></i> Expenses paid:
	</dt>
	<dd>{{#if expensesPaid}}Yes{{else}}No{{/if}}</dd>
	{{/if}} {{#if supportOptions}}
