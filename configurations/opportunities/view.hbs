{{#any experienceRequired restrictionDetails travelDetails minimumAge}}
<h4>
	<i class="fa fa-fw fa-ban"></i>
	Restrictions
</h4>
<dl class="dl-horizontal">
	{{#if experienceRequired}}
	<dt>
		<i class="fa fa-fw fa-graduation-cap"></i>
		Experience required:
	</dt>
	<dd>{{ps experienceRequired}}</dd>
	{{/if}}
	{{#if restrictionDetails}}
	<dt>
		<i class="fa fa-fw fa-flag"></i>
		Restriction details
	</dt>
	<dd>{{ps restrictionDetails}}</dd>
	{{/if}}
	{{#if travelDetails}}
	<dt>
		<i class="fa fa-fw fa-plane"></i>
		Travel details
	</dt>
	<dd>{{travelDetails}}</dd>
	{{/if}}
	{{#if minimumAge}}
	<dt>
		<i class="fa fa-fw fa-child"></i>
		Minimum age
	</dt>
	<dd>{{minimumAge}}</dd>
	{{/if}}
