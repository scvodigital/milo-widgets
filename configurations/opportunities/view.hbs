				<td style="text-align:center;font-weight:bold;">{{#if sundayMorning}}<i class="fa fa-fw fa-check-square-o"></i><span class="visible-print">&#10003;</span>{{else}}<i class="fa fa-fw fa-square-o"></i>{{/if}}</td>
			</tr>
			<tr>
				<th>Afternoon</th>
				<td style="text-align:center;font-weight:bold;">{{#if mondayAfternoon}}<i class="fa fa-fw fa-check-square-o"></i><span class="visible-print">&#10003;</span>{{else}}<i class="fa fa-fw fa-square-o"></i>{{/if}}</td>
				<td style="text-align:center;font-weight:bold;">{{#if tuesdayAfternoon}}<i class="fa fa-fw fa-check-square-o"></i><span class="visible-print">&#10003;</span>{{else}}<i class="fa fa-fw fa-square-o"></i>{{/if}}</td>
				<td style="text-align:center;font-weight:bold;">{{#if wednesdayAfternoon}}<i class="fa fa-fw fa-check-square-o"></i><span class="visible-print">&#10003;</span>{{else}}<i class="fa fa-fw fa-square-o"></i>{{/if}}</td>
				<td style="text-align:center;font-weight:bold;">{{#if thursdayAfternoon}}<i class="fa fa-fw fa-check-square-o"></i><span class="visible-print">&#10003;</span>{{else}}<i class="fa fa-fw fa-square-o"></i>{{/if}}</td>
				<td style="text-align:center;font-weight:bold;">{{#if fridayAfternoon}}<i class="fa fa-fw fa-check-square-o"></i><span class="visible-print">&#10003;</span>{{else}}<i class="fa fa-fw fa-square-o"></i>{{/if}}</td>
				<td style="text-align:center;font-weight:bold;">{{#if saturdayAfternoon}}<i class="fa fa-fw fa-check-square-o"></i><span class="visible-print">&#10003;</span>{{else}}<i class="fa fa-fw fa-square-o"></i>{{/if}}</td>
				<td style="text-align:center;font-weight:bold;">{{#if sundayAfternoon}}<i class="fa fa-fw fa-check-square-o"></i><span class="visible-print">&#10003;</span>{{else}}<i class="fa fa-fw fa-square-o"></i>{{/if}}</td>
			</tr>
