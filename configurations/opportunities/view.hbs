				<td style="text-align:center;font-weight:bold;">{{#if wednesdayEvening}}<i class="fa fa-fw fa-check-square-o"></i><span class="visible-print">&#10003;</span>{{else}}<i class="fa fa-fw fa-square-o"></i>{{/if}}</td>
				<td style="text-align:center;font-weight:bold;">{{#if thursdayEvening}}<i class="fa fa-fw fa-check-square-o"></i><span class="visible-print">&#10003;</span>{{else}}<i class="fa fa-fw fa-square-o"></i>{{/if}}</td>
