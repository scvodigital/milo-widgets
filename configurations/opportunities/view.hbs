{{#any experience_required restriction_details travel_details minimum_age}}
<h4>
	<i class="fa fa-fw fa-ban"></i>
	Restrictions
</h4>
<dl class="dl-horizontal">
	{{#if experience_required}}
	<dt>
		<i class="fa fa-fw fa-graduation-cap"></i>
		Experience required:
	</dt>
	<dd>{{ps experience_required}}</dd>
	{{/if}}
	{{#if restriction_details}}
	<dt>
		<i class="fa fa-fw fa-flag"></i>
		Restriction details:
	</dt>
	<dd>{{ps restriction_details}}</dd>
	{{/if}}
	{{#if travel_details}}
	<dt>
		<i class="fa fa-fw fa-plane"></i>
		Travel details:
	</dt>
	<dd>{{travel_details}}</dd>
	{{/if}}
	{{#if minimum_age}}
	<dt>
		<i class="fa fa-fw fa-child"></i>
		Minimum age:
	</dt>
	<dd>{{minimum_age}}</dd>
	{{/if}}
</dl>
{{/any}}
{{#any travel_expenses frequency expenses_paid support_options}}
<h4>
	<i class="fa fa-fw fa-life-ring"></i>
	Support
</h4>
<dl class="dl-horizontal">
	{{#if travel_expenses}}
	<dt>
		<i class="fa fa-fw fa-money"></i> Travel expenses:
	</dt>
	<dd>{{travel_expenses}}</dd>
	{{/if}} {{#if frequency}}
	<dt>
		<i class="fa fa-fw fa-clock-o"></i> Frequency:
	</dt>
	<dd>{{frequency}}</dd>
	{{/if}} {{#if expenses_paid}}
	<dt>
		<i class="fa fa-fw fa-gbp"></i> Expenses paid:
	</dt>
	<dd>{{#if expenses_paid}}Yes{{else}}No{{/if}}</dd>
	{{/if}} {{#if support_options}}
	<dt>
		<i class="fa fa-fw fa-list"></i> Support options:
	</dt>
	<dd>{{support_options}}</dd>
	{{/if}}
</dl>
{{/any}}

{{#compare details_to_display_on_vs '==' 'TSI/VC'}}
<h4>
	<i class="fa fa-fw fa-bullhorn"></i>
	Contact {{tsi_name}} TSI on behalf of {{organisation_name}} about this opportunity
</h4>
<dl class="dl-horizontal">
	<dt>
		<i class="fa fa-fw fa-user"></i>
		Contact name:
	</dt>
	<dd>{{tsi_contact_first_name}} {{tsi_contact_last_name}}</dd>

	{{#if tsi_contact_phone}}
	<dt>
		<i class="fa fa-fw fa-phone"></i>
		Phone:
	</dt>
	<dd><a href="tel:{{tsi_contact_phone}}">{{tsi_contact_phone}}</a></dd>
	{{/if}}

	{{#if tsi_contact_email}}
	<dt>
		<i class="fa fa-fw fa-envelope-o"></i>
		Email:
	</dt>
	<dd>
		<a href="mailto:{{tsi_contact_email}}?subject=[{{milo_ref}} {{title}} - Register Interest]" class="btn btn-primary">Register Interest</a>
	</dd>
	{{/if}}
</dl>

{{else}}

<h4>
	<i class="fa fa-fw fa-bullhorn"></i>
	Contact {{organisation_name}} about this opportunity
</h4>
<dl class="dl-horizontal">
	<dt>
		<i class="fa fa-fw fa-user"></i>
		Contact name:
	</dt>
	<dd>{{organisation_contact_first_name}} {{organisation_contact_last_name}}</dd>

	{{#any organisation_location_street organisation_location_area_town organisation_location_city_county organisation_location_postcode}}
		<dt>
			<i class="fa fa-fw fa-home"></i>
			Address:
		</dt>
		<dd>
			{{#if organisation_location_street}}{{organisation_location_street}}, <br />{{/if}}
			{{#if organisation_location_area_town}}{{organisation_location_area_town}}, <br />{{/if}}
			{{#if organisation_location_city_county}}{{organisation_location_city_county}}, <br />{{/if}}
			{{#if organisation_location_postcode}}{{organisation_location_postcode}}{{/if}}
		</dd>
	{{/any}}

	{{#if organisation_contact_phone}}
	<dt>
		<i class="fa fa-fw fa-phone"></i>
		Phone:
	</dt>
	<dd><a href="tel:{{organisation_contact_phone}}">{{organisation_contact_phone}}</a></dd>
	{{/if}}

	{{#if organisation_website}}
	<dt>
		<i class="fa fa-fw fa-external-link"></i>
		Website:
	</dt>
	<dd>
		<a href="{{#startsWith organisation_website "http"}}{{else}}http://{{/startsWith}}{{organisation_website}}" target="_blank">{{organisation_name}}</a>
	</dd>
	{{/if}}

	{{#if organisation_contact_email}}
	<dt>
		<i class="fa fa-fw fa-envelope-o"></i>
		Email:
	</dt>
	<dd>
		<a href="mailto:{{organisation_contact_email}}?subject=[{{milo_ref}} {{title}} - Register Interest]">Register Interest</a>
	</dd>
	{{/if}}
</dl>
{{/compare}}
</div>
