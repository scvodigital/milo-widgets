<h2>
    <strong>{{name}}</strong>
    {{#if registeredCharityNo}}
    <small>({{registeredCharityNo}})</small>
    {{/if}}
</h2>

<div class="row">
    <div class="col-sm-8">
        <div class="row">
            <div class="col-sm-6">
                <h3>Primary Address</h3>
                {{pa this}}
            </div>
            <div class="col-sm-6">
                <h3>Contact Information</h3>
                <ul class="list-unstyled">
                    {{#if phone}}
                    <li>
                        <strong>Phone:</strong>
                        <a href="tel:{{phone}}">{{phone}}</a>
                    </li>
                    {{/if}} {{#if email}}
                    <li>
                        <strong>Email:</strong>
                        <a href="mailto:{{email}}">Send Email</a>
                    </li>
                    {{/if}} {{#if website}}
                    <li>
                        <strong>Website:</strong>
                        <a href="{{uri website}}">Visit Website</a>
                    </li>
                    {{/if}}
                </ul>
            </div>
        </div>
        <h3>Aims and Objectives</h3>
        {{#if aimsAndObjectives}} {{ps aimsAndObjectives}} {{else}} No Aims or Objectives given. {{/if}}
    </div>
    <div class="col-sm-4">
        <h3>Activities</h3>
        <ul class="list-unstyled">
            {{#each mainActivitiesGlobal}}
            <li>{{this}}</li>
            {{/each}}
        </ul>
    </div>
</div>